/**app.wxss - 养老系统全局样式 - 适老化设计**/

/* 全局CSS变量 - 温馨居家主题 */
page {
  --primary-bg: #F9F7F3;          /* 米白背景（宣纸色，减少刺眼） */
  --primary-color: #FF7F50;       /* 珊瑚橙（主色调） */
  --primary-dark: #E65100;        /* 深橙色（强调色） */
  --secondary-color: #66BB6A;     /* 柔和绿 */
  --text-color: #333333;          /* 深灰文字（避免纯黑） */
  --text-secondary: #666666;      /* 次要文字 */
  --text-light: #999999;          /* 浅色文字 */
  --alert-color: #FF6B6B;         /* 提醒红 */
  --border-color: #E8E4DF;        /* 米色边框 */
  --card-bg: #FFFFFF;             /* 卡片纯白背景 */
  --shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);  /* 柔和阴影 */
  --radius-large: 24rpx;          /* 大圆角 */
  --radius-medium: 16rpx;         /* 中圆角 */
  --radius-small: 12rpx;          /* 小圆角 */
}

/* 全局页面样式 - 适老化 */
page {
  background-color: var(--primary-bg);
  font-family: -apple-system-font, "Helvetica Neue", "PingFang SC", sans-serif;
  color: var(--text-color);
  font-size: 34rpx;  /* 放大基础字体 */
  line-height: 1.6;  /* 增加行高，防止密集 */
}

/* 通用容器 */
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  background-color: var(--primary-bg);
}

/* 滚动区域 */
.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

/* 卡片样式 */
.card {
  background: var(--card-bg);
  border-radius: var(--radius-medium);
  padding: 32rpx;
  margin: 20rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
}

/* 主按钮 - 胶囊样式 */
.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: #FFFFFF;
  border: none;
  border-radius: 60rpx;  /* 全圆角胶囊 */
  padding: 28rpx 56rpx;
  font-size: 34rpx;
  font-weight: 500;
  box-shadow: 0 6rpx 20rpx rgba(255, 127, 80, 0.25);
}

/* 次要按钮 */
.btn-secondary {
  background: #FFFFFF;
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: 60rpx;
  padding: 28rpx 56rpx;
  font-size: 34rpx;
}

/* 文本样式 */
.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-light {
  color: var(--text-light);
}

.text-large {
  font-size: 44rpx;  /* 放大 */
  font-weight: 600;
}

.text-medium {
  font-size: 34rpx;
}

.text-small {
  font-size: 28rpx;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
  color: var(--text-light);
  font-size: 32rpx;
} 
