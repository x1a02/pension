/* 个人中心 - 温馨适老化设计 */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--primary-bg);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
}

.content {
  padding-bottom: 40rpx;
}

/* 个人信息头部 - 精简版 */
.profile-header {
  background: linear-gradient(135deg, #FFE8DD 0%, #FFD4C4 100%);
  padding: 48rpx 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.avatar-circle {
  width: 108rpx;
  height: 108rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 50%;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 6rpx 20rpx rgba(255, 127, 80, 0.3);
  flex-shrink: 0;
}

.avatar-text {
  font-size: 52rpx;
  font-weight: 700;
  color: #ffffff;
}

.profile-info {
  flex: 1;
}

.profile-name {
  display: block;
  font-size: 38rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 8rpx;
}

.profile-role {
  display: inline-block;
  font-size: 24rpx;
  color: var(--primary-color);
  background: rgba(255, 127, 80, 0.1);
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

/* 基本信息卡片 */
.info-card {
  background: var(--card-bg);
  border-radius: var(--radius-medium);
  padding: 32rpx;
  margin: 0 24rpx 24rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
}

.info-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx dashed var(--border-color);
}

.info-row:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.info-row:first-child {
  padding-top: 0;
}

.info-label {
  font-size: 30rpx;
  color: var(--text-secondary);
  font-weight: 500;
}

.info-value {
  font-size: 30rpx;
  color: var(--text-color);
  font-weight: 500;
}

.status-badge {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.status-1 {
  background: #E8F5E9;
  color: #66BB6A;
}

.status-0 {
  background: #FFEBEE;
  color: #FF6B6B;
}

/* 功能菜单 - Cell单元格 */
.menu-list {
  background: var(--card-bg);
  border-radius: var(--radius-medium);
  margin: 0 24rpx 24rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
  overflow: hidden;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  border-bottom: 1rpx solid var(--border-color);
  transition: background 0.2s;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--primary-bg);
}

/* CSS图标 - 菜单图标 */
.menu-icon {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  position: relative;
  flex-shrink: 0;
}

/* 我的消息图标 */
.menu-icon-message {
  background: linear-gradient(135deg, #42A5F5 0%, #1976D2 100%);
}

.menu-icon-message::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 30rpx;
  height: 24rpx;
  border: 3rpx solid white;
  border-radius: 4rpx;
}

.menu-icon-message::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%) rotate(-45deg);
  width: 0;
  height: 0;
  border-left: 10rpx solid transparent;
  border-right: 10rpx solid transparent;
  border-top: 12rpx solid white;
  margin-top: -4rpx;
}

/* 系统设置图标 */
.menu-icon-settings {
  background: linear-gradient(135deg, #66BB6A 0%, #4CAF50 100%);
}

.menu-icon-settings::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 28rpx;
  height: 28rpx;
  border: 3rpx solid white;
  border-radius: 50%;
}

.menu-icon-settings::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 32rpx;
  height: 8rpx;
  background: white;
}

/* 使用帮助图标 */
.menu-icon-help {
  background: linear-gradient(135deg, #FFA726 0%, #FF9800 100%);
}

.menu-icon-help::before {
  content: '?';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 36rpx;
  font-weight: 700;
}

/* 关于我们图标 */
.menu-icon-about {
  background: linear-gradient(135deg, #7E57C2 0%, #5E35B1 100%);
}

.menu-icon-about::before {
  content: 'i';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  color: white;
  font-size: 36rpx;
  font-weight: 700;
  font-style: italic;
}

.menu-title {
  flex: 1;
  font-size: 32rpx;
  color: var(--text-color);
  font-weight: 500;
}

.menu-right {
  display: flex;
  align-items: center;
}

.badge {
  background: var(--alert-color);
  color: white;
  padding: 4rpx 12rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
  font-weight: 500;
  margin-right: 12rpx;
  min-width: 32rpx;
  text-align: center;
}

.menu-arrow {
  width: 12rpx;
  height: 12rpx;
  border-top: 3rpx solid var(--text-light);
  border-right: 3rpx solid var(--text-light);
  transform: rotate(45deg);
}

/* 退出登录 */
.logout-wrapper {
  padding: 0 24rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: transparent;
  color: var(--alert-color);
  border: none;
  border-radius: 60rpx;
  font-size: 32rpx;
  font-weight: 500;
  line-height: 88rpx;
  text-align: center;
  box-shadow: none;
}

.logout-btn::after {
  border: none;
}
