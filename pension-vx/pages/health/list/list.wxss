/* 健康记录 - 温馨适老化设计 */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--primary-bg);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
}

/* 健康记录列表 */
.health-list {
  padding: 20rpx 24rpx 40rpx;
}

.health-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 167, 38, 0.08);
  border: 2rpx solid #F5E6D3;
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  padding: 24rpx 32rpx;
  background: linear-gradient(135deg, #FFF8F0 0%, #FFFBF5 100%);
  border-bottom: 2rpx dashed #F5E6D3;
}

.date-icon {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.health-date {
  flex: 1;
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.data-source {
  font-size: 24rpx;
  color: #FFFFFF;
  background: #66BB6A;
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
}

/* 健康数据 */
.health-data {
  padding: 28rpx 32rpx;
}

.data-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 24rpx;
}

.data-cell {
  display: flex;
  align-items: center;
  background: #FFFBF5;
  padding: 24rpx;
  border-radius: 16rpx;
  border: 2rpx solid #F5E6D3;
}

.cell-icon {
  font-size: 48rpx;
  margin-right: 16rpx;
}

.cell-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.cell-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 6rpx;
}

.cell-value {
  font-size: 36rpx;
  font-weight: 700;
  color: #FFA726;
  line-height: 1.2;
}

.cell-unit {
  font-size: 22rpx;
  color: #666666;
  margin-top: 4rpx;
}

/* 备注区域 */
.notes-section {
  background: #FFF3E0;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #FFE0B2;
  margin-top: 16rpx;
}

.notes-label {
  display: block;
  font-size: 24rpx;
  color: #FF9800;
  font-weight: 600;
  margin-bottom: 12rpx;
}

.notes-text {
  display: block;
  font-size: 28rpx;
  color: #666666;
  line-height: 1.6;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 32rpx;
  color: #999999;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.empty-hint {
  display: block;
  font-size: 26rpx;
  color: #BBBBBB;
  line-height: 1.6;
}
