/* 社区活动列表 - 温馨适老化设计 */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--primary-bg);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
}

.activity-list {
  padding: 24rpx;
}

.activity-card {
  background: var(--card-bg);
  border-radius: var(--radius-medium);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
  display: flex;
  gap: 24rpx;
  transition: all 0.3s ease;
}

.activity-card:active {
  transform: translateY(-4rpx);
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.08);
}

/* 日期徽章 */
.activity-date-badge {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: var(--radius-small);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 127, 80, 0.2);
}

.badge-day {
  font-size: 40rpx;
  font-weight: 700;
  color: white;
  line-height: 1;
}

.badge-month {
  font-size: 20rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-top: 4rpx;
}

/* 活动内容 */
.activity-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.activity-name {
  display: block;
  font-size: 34rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.activity-desc {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 20rpx;
  line-height: 1.6;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 元数据 */
.activity-meta {
  display: flex;
  gap: 32rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed var(--border-color);
}

.meta-item {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.meta-label {
  font-size: 24rpx;
  color: var(--text-light);
  font-weight: 500;
}

.meta-value {
  font-size: 28rpx;
  color: var(--primary-color);
  font-weight: 600;
}

/* 温馨空状态 */
.empty-warm {
  text-align: center;
  padding: 120rpx 40rpx;
}

.empty-illustration {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(135deg, #FFE8DD 0%, #FFD4C4 100%);
  border-radius: 50%;
  position: relative;
}

.empty-illustration::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 50%;
  opacity: 0.3;
}

.empty-text {
  display: block;
  font-size: 34rpx;
  color: var(--text-color);
  font-weight: 500;
  margin-bottom: 12rpx;
}

.empty-hint {
  display: block;
  font-size: 28rpx;
  color: var(--text-light);
  line-height: 1.6;
}
