/* 登录页 - 温馨适老化设计 */

.container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FFE8DD 0%, #FFD4C4 100%);
  display: flex;
  flex-direction: column;
}

.login-box {
  flex: 1;
  padding: 120rpx 48rpx 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

/* Logo区域 */
.logo-section {
  text-align: center;
  margin-bottom: 80rpx;
}

.logo-circle {
  width: 140rpx;
  height: 140rpx;
  margin: 0 auto 32rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 50%;
  box-shadow: 0 8rpx 24rpx rgba(255, 127, 80, 0.3);
  position: relative;
}

.logo-circle::before {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 70rpx;
  height: 70rpx;
  background: white;
  border-radius: 50%;
}

.logo-circle::after {
  content: '';
  position: absolute;
  bottom: 32rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 40rpx;
  background: white;
  border-radius: 40rpx 40rpx 0 0;
}

.title {
  display: block;
  font-size: 44rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 12rpx;
  line-height: 1.4;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: var(--text-secondary);
}

/* 表单区域 */
.form {
  background: var(--card-bg);
  border-radius: var(--radius-large);
  padding: 48rpx 40rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
}

.form-item {
  margin-bottom: 36rpx;
}

.form-item:last-of-type {
  margin-bottom: 0;
}

.label {
  display: block;
  font-size: 30rpx;
  color: var(--text-color);
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  height: 88rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  background: var(--primary-bg);
  color: var(--text-color);
  box-sizing: border-box;
}

.input:focus {
  border-color: var(--primary-color);
  background: var(--card-bg);
}

.login-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: #FFFFFF;
  border-radius: 48rpx;
  font-size: 34rpx;
  font-weight: 500;
  margin-top: 48rpx;
  box-shadow: 0 6rpx 20rpx rgba(255, 127, 80, 0.3);
  border: none;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  opacity: 0.9;
}

/* 提示信息 */
.tips {
  text-align: center;
  margin-top: 32rpx;
}

.tip-text {
  font-size: 26rpx;
  color: var(--text-light);
  line-height: 1.6;
}
