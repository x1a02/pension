/* 老人详情 - 温馨适老化设计 */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--primary-bg);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
}

.content {
  padding: 20rpx 24rpx 40rpx;
}

/* 个人信息卡片 */
.profile-card {
  background: linear-gradient(135deg, #FFA726 0%, #FF9800 100%);
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 167, 38, 0.25);
}

.avatar-section {
  display: flex;
  align-items: center;
}

.large-avatar {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 28rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.5);
}

.large-avatar-text {
  color: #FFFFFF;
  font-size: 52rpx;
  font-weight: 700;
}

.profile-name-area {
  flex: 1;
}

.profile-name {
  display: block;
  color: #FFFFFF;
  font-size: 42rpx;
  font-weight: 700;
  margin-bottom: 16rpx;
}

.profile-tags {
  display: flex;
  gap: 12rpx;
}

.profile-tag {
  background: rgba(255, 255, 255, 0.25);
  color: #FFFFFF;
  padding: 8rpx 24rpx;
  border-radius: 24rpx;
  font-size: 26rpx;
  font-weight: 500;
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

/* 通用区块卡片 */
.section-card {
  background: #FFFFFF;
  border-radius: 20rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 167, 38, 0.08);
  border: 2rpx solid #F5E6D3;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.title-icon {
  font-size: 40rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}

.view-all-btn {
  font-size: 26rpx;
  color: #FFA726;
  font-weight: 500;
}

/* 信息网格 */
.info-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
  margin-bottom: 20rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
}

.item-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.item-value {
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

/* 信息行 */
.info-row {
  display: flex;
  flex-direction: column;
  padding: 20rpx 0;
  border-top: 2rpx dashed #F5E6D3;
}

.row-label {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 8rpx;
}

.row-value {
  font-size: 30rpx;
  color: #333333;
  line-height: 1.6;
}

.phone-value {
  color: #FFA726;
  text-decoration: underline;
  font-weight: 500;
}

/* 紧急联系人 */
.emergency-contact {
  background: #FFF3E0;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #FFE0B2;
}

.contact-row {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.contact-row:first-child {
  padding-top: 0;
}

.contact-row:last-child {
  padding-bottom: 0;
}

.contact-label {
  width: 140rpx;
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.contact-value {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  font-weight: 500;
}

/* 健康状况 */
.health-status-box {
  background: #FFEBEE;
  border-radius: 16rpx;
  padding: 24rpx;
  border: 2rpx solid #FFCDD2;
}

.health-status-text {
  font-size: 30rpx;
  color: #FF7043;
  line-height: 1.6;
}

/* 健康记录 */
.health-records {
  margin-top: 12rpx;
}

.health-record-item {
  background: #F5F5F5;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  border: 2rpx solid #EEEEEE;
}

.health-record-item:last-child {
  margin-bottom: 0;
}

.record-date {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.date-icon {
  font-size: 28rpx;
  margin-right: 8rpx;
}

.date-text {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.record-data {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.data-badge {
  background: #FFFFFF;
  color: #FFA726;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
  border: 2rpx solid #F5E6D3;
}

/* 空状态 */
.empty-health {
  text-align: center;
  padding: 60rpx 0;
}

.empty-health-text {
  font-size: 28rpx;
  color: #999999;
}
