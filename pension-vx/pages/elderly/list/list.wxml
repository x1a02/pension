<view class="container">
  <navigation-bar title="老人信息" back="{{false}}" color="black" background="#FFF"></navigation-bar>

  <scroll-view class="scrollarea" scroll-y type="list">
    <view class="search-box">
      <view class="search-wrapper">
        <input class="search-input" placeholder="请输入老人姓名搜索" placeholder-style="color: #999" bindinput="onSearchInput" bindconfirm="handleSearch" />
        <button class="search-btn" bindtap="handleSearch">搜索</button>
      </view>
    </view>

    <view class="elderly-list">
      <view class="elderly-card" wx:for="{{elderlyList}}" wx:key="id" bindtap="viewDetail" data-id="{{item.id}}">
        <view class="card-header">
          <view class="avatar-wrapper">
            <text class="avatar-text">{{item.name.charAt(0)}}</text>
          </view>
          <view class="header-info">
            <text class="elderly-name">{{item.name}}</text>
            <view class="tag-group">
              <text class="tag tag-age">{{item.age}}岁</text>
              <text class="tag tag-gender">{{item.gender === 1 ? '男' : '女'}}</text>
            </view>
          </view>
        </view>

        <view class="card-body">
          <view class="info-item">
            <text class="info-label">电话</text>
            <text class="info-text">{{item.phone || '未填写'}}</text>
          </view>
          <view class="info-item">
            <text class="info-label">地址</text>
            <text class="info-text">{{item.address || '未填写'}}</text>
          </view>
          <view class="info-item" wx:if="{{item.healthStatus}}">
            <text class="info-label">健康</text>
            <text class="info-text health-status">{{item.healthStatus}}</text>
          </view>
        </view>

        <view class="card-footer">
          <text class="footer-text">点击查看详细信息</text>
          <text class="footer-arrow">→</text>
        </view>
      </view>

      <view class="empty" wx:if="{{elderlyList.length === 0}}">
        <text class="empty-text">暂无老人信息</text>
      </view>
    </view>
  </scroll-view>
</view>
