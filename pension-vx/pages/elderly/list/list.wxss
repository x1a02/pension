/* 老人信息列表 - 温馨适老化设计 */

page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--primary-bg);
}

.scrollarea {
  flex: 1;
  overflow-y: hidden;
}

.container {
  height: 100%;
}

/* 搜索区域 */
.search-box {
  padding: 24rpx 24rpx 20rpx;
  background: #FFFFFF;
  margin-bottom: 12rpx;
}

.search-wrapper {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.search-input {
  flex: 1;
  height: 80rpx;
  border: 2rpx solid var(--border-color);
  border-radius: 40rpx;
  padding: 0 32rpx;
  font-size: 30rpx;
  background: var(--primary-bg);
  color: var(--text-color);
}

.search-btn {
  width: 140rpx;
  height: 80rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  color: #FFFFFF;
  border-radius: 40rpx;
  font-size: 30rpx;
  line-height: 80rpx;
  text-align: center;
  font-weight: 500;
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 127, 80, 0.25);
}

/* 老人列表 */
.elderly-list {
  padding: 0 24rpx 24rpx;
}

.elderly-card {
  background: var(--card-bg);
  border-radius: var(--radius-medium);
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: var(--shadow);
  border: 1rpx solid var(--border-color);
  transition: all 0.3s ease;
}

/* 卡片头部 */
.card-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 2rpx dashed var(--border-color);
}

.avatar-wrapper {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-dark) 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 127, 80, 0.3);
}

.avatar-text {
  color: #FFFFFF;
  font-size: 40rpx;
  font-weight: 600;
}

.header-info {
  flex: 1;
}

.elderly-name {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: var(--text-color);
  margin-bottom: 12rpx;
}

.tag-group {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  font-weight: 500;
}

.tag-age {
  background: #FFF3E0;
  color: #FF9800;
}

.tag-gender {
  background: #E8F5E9;
  color: #66BB6A;
}

/* 卡片主体 - 简洁文本 */
.card-body {
  margin-bottom: 20rpx;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  gap: 16rpx;
}

.info-label {
  width: 80rpx;
  font-size: 26rpx;
  color: var(--text-light);
  font-weight: 500;
  flex-shrink: 0;
}

.info-text {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-secondary);
  line-height: 1.5;
}

.health-status {
  color: var(--alert-color);
  font-weight: 500;
}

/* 卡片底部 */
.card-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 2rpx dashed var(--border-color);
}

.footer-text {
  font-size: 26rpx;
  color: var(--primary-color);
  font-weight: 500;
}

.footer-arrow {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: 600;
}

/* 空状态 */
.empty {
  text-align: center;
  padding: 120rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 24rpx;
}

.empty-text {
  display: block;
  font-size: 30rpx;
  color: var(--text-light);
}


